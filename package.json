{
  "private": true,
  "name": "remix-cloudflare-workers-template",
  "main": "./worker.js",
  "description": "",
  "license": "",
  "scripts": {
    "build:kv": "node ./updateKV.mjs",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "build:worker": "esbuild ./worker.ts --bundle --minify --define:process.env.NODE_ENV=\"'production'\" --platform=browser --format=esm --outfile=worker.js",
    "build": "npm run build:css && npm run build:remix && npm run build:worker",
    "cleanup": "rimraf .mf .cache ./build ./public/build worker.js",
    "dev": "npm run build:remix && esbuild ./worker.ts --bundle --define:process.env.NODE_ENV=\"'development'\" --platform=browser --format=esm --outfile=worker.js",
    "postinstall": "patch-package",
    "prebuild": "npm run cleanup",
    "start": "MINIFLARE=1 npm run build:kv && concurrently \"npm:watch:*\"",
    "watch:app": "miniflare --build-command \"npm run dev\" --watch --kv-persist",
    "watch:style": "postcss styles --base styles --dir app/styles -w"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@remix-run/dev": "^0.17.5",
    "@remix-run/node": "^0.17.5",
    "@remix-run/react": "^0.17.5",
    "gray-matter": "^4.0.3",
    "link-preview-js": "^2.1.8",
    "patch-package": "^6.4.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remix": "^0.17.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.16.1",
    "@iarna/toml": "^2.2.5",
    "@remix-run/serve": "^0.17.5",
    "@tailwindcss/typography": "^0.4.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "esbuild": "^0.12.1",
    "miniflare": "^1.4.0",
    "node-fetch": "^3.0.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
