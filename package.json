{
  "private": true,
  "name": "@edmundhung/blog",
  "main": "./dist/worker.mjs",
  "description": "Blog built with Remix, deployed to Cloudflare workers",
  "license": "MIT",
  "scripts": {
    "build:style": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "SERVER_FORMAT=esm remix build",
    "build:worker": "NODE_ENV=production VERSION=$(git rev-parse HEAD) node ./scripts/build.mjs",
    "build": "npm run build:style && npm run build:remix && npm run build:worker",
    "cleanup": "rimraf .cache ./build ./dist ./public/build",
    "dev:cypress": "cypress open",
    "dev:style": "postcss styles --base styles --dir app/styles -w",
    "dev:remix": "SERVER_FORMAT=esm remix watch",
    "dev:miniflare": "miniflare --build-command \"node ./scripts/build.mjs\" --kv-persist --no-cache --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "test:cypress": "cypress run",
    "test": "start-server-and-test http-get://localhost:8787 test:cypress",
    "kv:publish": "workaholic publish content.json",
    "kv:build": "workaholic build content.json",
    "kv:preview": "rimraf .mf && node ./scripts/preview.mjs",
    "postinstall": "remix setup cloudflare-workers",
    "prebuild": "npm run cleanup",
    "predev": "npm run kv:preview",
    "prepare": "husky install",
    "prestart": "npm run kv:preview",
    "start": "miniflare --kv-persist --no-cache"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/dev": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@squoosh/lib": "^0.4.0",
    "@workaholic/core": "^0.4.0-alpha.4",
    "cross-fetch": "^3.1.4",
    "gray-matter": "^4.0.3",
    "link-preview-js": "^2.1.8",
    "patch-package": "^6.4.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^7.1.0",
    "react-syntax-highlighter": "^15.4.4",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.4",
    "@iarna/toml": "^2.2.5",
    "@tailwindcss/typography": "^0.4.1",
    "@testing-library/cypress": "^8.0.1",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/rimraf": "^3.0.2",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.3.0",
    "cssnano": "^5.0.8",
    "cypress": "^8.7.0",
    "esbuild": "^0.13.12",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "miniflare": "^2.0.0-rc.2",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.1",
    "prettier": "^2.4.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=16.7"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "sideEffects": false
}
