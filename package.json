{
  "private": true,
  "name": "@edmundhung/blog",
  "main": "./worker.js",
  "description": "Blog built with Remix, deployed to Cloudflare workers",
  "license": "",
  "scripts": {
    "build:style": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "SERVER_PLATFORM=browser SERVER_FORMAT=esm remix build",
    "build:worker": "NODE_ENV=production ts-node ./build.ts",
    "build": "npm run build:style && npm run build:remix && npm run build:worker",
    "cleanup": "rimraf .cache ./build ./public/build worker.js",
    "dev:cypress": "cypress open",
    "dev:style": "postcss styles --base styles --dir app/styles -w",
    "dev:remix": "SERVER_PLATFORM=browser SERVER_FORMAT=esm remix dev",
    "dev:miniflare": "miniflare --build-command \"npx ts-node ./build.ts\" --kv-persist --disable-cache --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "test:miniflare": "npm run predev && miniflare --kv-persist --disable-cache",
    "test:cypress": "cypress run",
    "test": "start-server-and-test test:miniflare http-get://localhost:8787 test:cypress",
    "kv:publish": "BINDING=Content MODE=publish ts-node ./namespace/index.ts",
    "kv:preview": "rimraf .mf && BINDING=Content MODE=preview ts-node ./namespace/index.ts",
    "postinstall": "patch-package && remix setup",
    "prebuild": "npm run cleanup",
    "predev": "SOURCE=cypress/fixtures/content.json npm run kv:preview",
    "prepare": "husky install",
    "prestart": "SOURCE=content npm run kv:preview",
    "start": "miniflare --kv-persist --disable-cache"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@remix-run/dev": "^0.18.1",
    "@remix-run/node": "^0.18.1",
    "@remix-run/react": "^0.18.1",
    "@remix-run/server-runtime": "^0.18.1",
    "gray-matter": "^4.0.3",
    "link-preview-js": "^2.1.8",
    "patch-package": "^6.4.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^7.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "react-syntax-highlighter": "^15.4.4",
    "remix": "^0.18.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.16.1",
    "@iarna/toml": "^2.2.5",
    "@remix-run/serve": "^0.18.1",
    "@tailwindcss/typography": "^0.4.1",
    "@testing-library/cypress": "^8.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "cypress": "^8.4.1",
    "esbuild": "^0.12.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "miniflare": "^1.4.0",
    "node-fetch": "^3.0.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.4.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^2.2.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "sideEffects": false
}
