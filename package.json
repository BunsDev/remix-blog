{
  "private": true,
  "name": "remix-cloudflare-workers-template",
  "main": "./worker.js",
  "description": "",
  "license": "",
  "scripts": {
    "postinstall": "patch-package",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "build:worker": "node ./worker/build.js",
    "build": "npm run build:css && npm run build:remix && npm run build:worker",
    "watch:js": "remix run",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "dev": "concurrently \"npm:watch:*\"",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.1",
    "@remix-run/dev": "^0.17.5",
    "@remix-run/node": "^0.17.5",
    "@remix-run/react": "^0.17.5",
    "patch-package": "^6.4.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remix": "^0.17.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.16.1",
    "@remix-run/serve": "^0.17.5",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "esbuild": "^0.12.1",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
